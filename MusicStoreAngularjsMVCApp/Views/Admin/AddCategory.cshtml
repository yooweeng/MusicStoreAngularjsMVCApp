@{
    ViewBag.Title = "Add Category";
}

@section Scripts{
    @Scripts.Render("~/bundles/adminAddCategory")
}

<div ng-controller="adminAddCategoryCtrl" class="p-5">
    <h2>Add Category / Genre</h2>
    <form action="/Admin/Genre" method="post">
        <div class="container mt-5 mb-5 mx-0">
            <div class="row">
                <div class="col-lg-2">
                    <input type="text" name="GenreType" class = "form-control" placeholder = "eg. Action" />
                </div>
                <div class="col-2 mt-2 mt-lg-0">
                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-plus" style="color: #ffffff;"></i>
                    </button>
                </div>
            </div>
        </div>
        <h2>Category / Genre List</h2>
        <div ng-repeat="genre in genres">
            {{genre.GenreType}}
        </div>
    </form>

</div>
