@{
    ViewBag.Title = "Customer Home";
}

@section Scripts {
    <script type="text/javascript" src="~/Scripts/app/customer/customerIndex.controller.js"></script>
}

<div ng-app="app" ng-controller="customerIndexCtrl" class="p-5 bg-secondary" style="min-height: 561px;">
    <h2>Movies / Products</h2>
    <div class="text-white mt-3 me-5">Filter:<i class="fa-solid fa-filter" style="color: #ffffff;"></i></div>
    <p>selectedGenreType: {{selectedGenreTypes}}</p>
    <select multiple chosen ng-model="selectedGenreTypes" ng-options="genre.GenreType for genre in genres"></select>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div id="cardMovie{{ movie.Id }}" class="col-sm-7 col-md-4 col-lg-4 col-xxl-3 card bg-dark text-white rounded-5 card-movie m-5 p-4" ng-repeat="movie in movies">
                <img ng-src="{{ movie.ImageUrl }}" class="card-img-top rounded-3">
                <div class="card-body d-flex flex-column justify-content-between pb-0">
                    <div class="mb-4">
                        <p class="card-text">
                            <span class="fw-bold">
                                Genre:&nbsp;
                            </span>
                            <span ng-repeat="genreType in movie.GenreTypes">
                                {{ genreType }}
                                <span ng-if="!$last">,</span>
                            </span>
                        </p>
                        <h5 class="card-title">{{ movie.MovieTitle }}</h5>
                        <p class="card-text">{{ movie.Description }}</p>
                    </div>
                    <div class="d-flex justify-content-end">
                        <a href="/Customer/MovieDetail/{{ movie.Id }}" class="btn btn-warning me-3 text-white">
                            View
                            <i class="fa-solid fa-book" style="color: #ffffff;"></i>
                        </a>
                        <button class="btn btn-success" onclick="setCurrentSelectedMovie()" data-bs-toggle="modal" data-bs-target="#confirmAddToCartModal">
                            Add to Cart
                            <i class="fa-solid fa-cart-shopping" style="color: #ffffff;"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
